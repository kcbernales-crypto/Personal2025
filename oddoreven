#include<iostream>
using namespace std;

int main() {
    
    int num1, remainder;
    
    cout <<"Enter a number: ";
    cin >> num1;
    
    cout << num1 << endl;
    
    remainder = num1 % 2;
    
    cout <<"The number is: ";
    
    if(remainder == 0){
      cout << "Even";
    }
    
    else{
        cout << "Odd";
    }
